{
  "name": "burgertime",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "deploy": "next build && firebase deploy --only hosting",
    "validate": "npm run format && next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write './**/*.{js,jsx,scss,md,json}' --config ./.prettierrc",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/node": "20.4.10",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "firebase": "^10.1.0",
    "next": "13.4.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "5.1.6"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.9",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.47.0",
    "eslint-config-next": "^13.4.13",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "postcss": "^8.4.27",
    "prettier": "^3.0.1",
    "prettier-plugin-tailwindcss": "^0.5.2",
    "sass": "^1.65.1",
    "tailwindcss": "^3.3.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts, tsx}": "eslint --cache --fix",
    "*.{ts, scss, md}": "prettier --write"
  }
}

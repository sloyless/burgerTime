{
  "name": "burgertime",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "deploy": "next build && firebase deploy --only hosting",
    "validate": "yarn format && yarn tsc && yarn lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,scss,md,json}' --config ./prettier.config.js",
    "tsc": "npx tsc --noEmit"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-regular-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.0",
    "@next/third-parties": "^16.0.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "24.10.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "firebase": "^12.5.0",
    "formidable": "^3.5.1",
    "next": "16.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sharp": "^0.34.5",
    "typescript": "5.9.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.9.1",
    "eslint-config-next": "^16.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.1",
    "lint-staged": "^16.2.6",
    "postcss": "^8.4.45",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "sass": "^1.78.0",
    "tailwindcss": "^4.1.17"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts, tsx, js, jsx}": "eslint --cache --fix",
    "*.{ts, tsx, js, jsx, scss, md}": "prettier --write"
  }
}
